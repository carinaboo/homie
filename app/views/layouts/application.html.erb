<!DOCTYPE html>
<html>
<head>
  <title>Homie</title>
  <%= favicon_link_tag 'favicon.png' %>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700,800' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Rokkitt:400,700' rel='stylesheet' type='text/css'>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>

<% if current_page?(root_url) %>
<body class="home">
<% else %>
<body>
<% end %>

<% if current_user %>
  <div class="nav">
    <%= link_to "", root_path, class: "logo" %>
    <span class="inline"><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></span>
    <span class="inline"><%= link_to "Profile", current_user %></span>
    <span class="inline"><%= link_to "Edit profile", edit_user_registration_path %></span>
    <span class="inline"><%= link_to "Add apartment", new_apartment_path %></span>
  </div>
<% else %>
  <div class="nav">
    <%= link_to "", root_path, class: "logo" %>
    <span class "rightbox">
      <span class="inline"><%= link_to "Log In", new_user_session_url %></span>
      <span class="inline"><%= link_to "Sign Up", new_user_registration_url %></span>
    </span>
  </div>
<% end %>

<div class="main">
  <div class="notice"><%= notice %></div>
  <div class="alert"><%= alert %></div>
  <%= yield %>
</div>

</body>
</html>
