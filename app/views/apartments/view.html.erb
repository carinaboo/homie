<h1>Homie</h1>
<% if current_user %>
  <p>Welcome <%= current_user.username %></p>
  <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
  <br>
  <%= link_to "Edit profile", edit_user_registration_path %>
  </div>
<% else %>
  <div class="home">
    <p class="inline"><%= link_to "Log In", new_user_session_url %></p>
    <p class="inline"><%= link_to "Sign Up", new_user_registration_url %></p>
  </div>
<% end %>

<h2><%= @apartment.title %></h2>
<p><%= @apartment.address %></p>
<p><%= @apartment.description %></p>
<p>$<%= @apartment.price %></p>
<p><%= @apartment.bedrooms %> bedrooms</p>
<p><%= @apartment.bathrooms %> bathrooms</p>
<p> rating: <%= @apartment.average_overall_rating %></p>