<% if current_user %>
	<div>Welcome <%= current_user.username %></div>
<% end %>

<section>
<h2 class="title">Find your new apartment.</h2>
<%= form_tag apartments_search_path, :method => 'get' do %>
  <%= text_field_tag :search, params[:search], :id => 'search_field', :placeholder => "Search address or listing title" %>
  <%= submit_tag "Search", name: nil, class: "btn btn-primary" %> 
<% end %> 
</section>